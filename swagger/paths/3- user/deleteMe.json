            "summary": "Soft delete current user",
            "security": [{ "bearerAuth": [] }],
            "responses": {
                "200": {
                    "description": "User deleted",
                    "content": {
                        "application/json": {
                            "schema": { "$ref": "#/components/schemas/DeleteMeResponse" }
