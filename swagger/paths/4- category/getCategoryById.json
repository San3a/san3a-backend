{
    "/category/{id}": {
        "get": {
            "tags": ["Category"],
            "summary": "Get a category by ID",
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": { "type": "string" }
                }
            ],
            "responses": {
                "200": {
                    "description": "Category found",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CategoryResponse"
                            }
                        }
                    }
                },
                "404": {
                    "description": "Category not found"
                }
            }
        }
    }
}
