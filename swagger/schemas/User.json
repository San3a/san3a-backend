{
    "User": {
        "type": "object",
        "properties": {
            "_id": { "type": "string", "example": "675f1a99c1b23cf1290af001" },
            "name": { "type": "string", "example": "Yousef Mohamed" },
            "email": { "type": "string", "format": "email", "example": "yousef@example.com" },
            "role": { "type": "string", "example": "user" },
            "active": { "type": "boolean", "example": true },
            "totalEarning": { "type": "number", "example": 0 },
            "image": {
                "type": "object",
                "properties": {
                    "public_id": { "type": "string", "nullable": true },
                    "url": { "type": "string", "nullable": true }
                }
            },
            "address": {
                "type": "object",
                "properties": {
                    "type": { "type": "string", "example": "Point" },
                    "coordinates": {
                        "type": "array",
                        "items": { "type": "number" },
                        "example": [31.2357, 30.0444]
                    }
                }
            },
            "rating": { "type": "number", "example": 4.5 },
            "createdAt": { "type": "string", "format": "date-time" },
            "updatedAt": { "type": "string", "format": "date-time" }
        }
    }
}
