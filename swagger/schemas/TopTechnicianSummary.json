{
    "TopTechnicianSummary": {
        "type": "object",
        "description": "Technician subset returned by /user/top-technicians-nearby",
        "properties": {
            "_id": { "type": "string", "example": "675f1a99c1b23cf1290af010" },
            "name": { "type": "string", "example": "Ahmed Hassan" },
            "rating": { "type": "number", "example": 4.8 },
            "distance": {
                "type": "number",
                "example": 1325.42,
                "description": "Distance in meters (present only when requester has coordinates)"
            },
            "address": {
                "type": "object",
                "properties": {
                    "type": { "type": "string", "example": "Point" },
                    "coordinates": {
                        "type": "array",
                        "items": { "type": "number" },
                        "example": [31.2357, 30.0444]
                    }
                }
            },
            "image": {
                "type": "object",
                "properties": {
                    "public_id": { "type": "string", "nullable": true },
                    "url": { "type": "string", "nullable": true }
                }
            }
        }
    }
}
